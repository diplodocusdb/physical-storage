ishikopath = envvar("ISHIKO_CPP");
import $(ishikopath)/test-framework/include/Ishiko/TestFramework.bkl;
diplodocusdbpath = envvar("DIPLODOCUSDB");
import $(diplodocusdbpath)/physical-storage/Include/DiplodocusDB/PhysicalStorage/PageRepository.bkl;

toolsets = gnu vs2019 vs2017 vs2015 vs2013;

gnu.makefile = ../GNUmakefile/GNUmakefile;
vs2019.solutionfile = ../vc16/DiplodocusDBPageRepositoryTests.sln;
vs2017.solutionfile = ../VC15/DiplodocusDBPageRepositoryTests.sln;
vs2015.solutionfile = ../VC14/DiplodocusDBPageRepositoryTests.sln;
vs2013.solutionfile = ../VC12/DiplodocusDBPageRepositoryTests.sln;

program DiplodocusDBPageRepositoryTests : DiplodocusDBPageRepository, IshikoTestFramework
{
    archs = x86 x86_64;

    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        libs += DiplodocusDBPageRepository IshikoTestFramework IshikoTestFrameworkCore IshikoConfiguration IshikoDiff IshikoXML IshikoFileSystem IshikoProcess IshikoTime IshikoText IshikoErrors;
        libs += fmt boost_filesystem;
    }

    headers
    {
        ../../Source/PageTests.h
        ../../Source/PageCacheTests.h
        ../../Source/PageFileRepositoryTests.h
        ../../Source/PageRepositoryWriterTests.h
        ../../Source/PageRepositoryReaderTests.h
    }

    sources
    {
        ../../Source/PageTests.cpp
        ../../Source/PageCacheTests.cpp
        ../../Source/main.cpp
        ../../Source/PageFileRepositoryTests.cpp
        ../../Source/PageRepositoryWriterTests.cpp
        ../../Source/PageRepositoryReaderTests.cpp
    }
}
